<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <Button
        android:id="@+id/id_btn_test_github"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试服务端缓存的网络请求"/>

    <Button
        android:id="@+id/id_btn_test_sojson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试客户端缓存的网络请求"/>

    <Button
        android:id="@+id/id_btn_test_rxjava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rxjava网络请求"/>

    <Button
        android:id="@+id/id_btn_test_java8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="java8网络请求"/>

    <Button
        android:id="@+id/id_btn_test_bitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片请求"/>

    <ImageView
        android:id="@+id/id_bitmap_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"/>
</LinearLayout>
