<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.android.test.demo.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btn_joor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="jOOR反射学习"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/btn_view_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="在View中监听宿主Activity的生命周期实现"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/btn_state_machine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="层次状态机（坦克）"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_test_weakreference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Weak Reference 弱引用测试"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_test_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="http请求"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_test_night_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="夜间模式"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_test_hook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Hook"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_test_fragments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Fragment"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_test_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="swipe back"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_test_plugin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="模拟启动插件activity"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_test_arch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Architecture Demo"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_test_uri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="测试Uri的解析接口"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_test_algorithm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="算法测试"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

</ScrollView>
